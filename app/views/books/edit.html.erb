<div class="eb-font">
    <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <% @book.errors.full_messages.each do |message| %>
        <div>
            <li><%= message %></li>
        </div>
        <% end %>
    <% end %>
</div>


<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, class:"book_title" %>

  <h4>Opinion</h4>
  <%= f.text_area :body, class:"book_body" %>

  <p><%= f.submit 'Update Book', class: "btn btn-primary" %></p>

 <% end %>

<!-- showは念のためにクラスをつけている。 -->
<%= link_to "Show", book_path(@book.id), class:"show_#{@book.id}" %>
