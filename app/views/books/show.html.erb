<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <%= render 'books/list', user: @book.user, book: @newbook %>
  </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
  	  <tbody>
  		  <tr>
          <td class="image">
          <%= link_to user_path(@book.user.id),class: "books" do %>
          <%= attachment_image_tag @book.user, :image, fallback:"no_image.jpg", class: "img" %>
          <%= @book.user.name %>
          <!-- 写真と名前は一緒。リンクもつける。 -->
          <br></td>
          <% end %>
  			  <td><%= @book.title %></td>

           <!-- ここにリンク(Book detailへの)が必要となってくる。 -->
	 		    <td><%= @book.body %></td>

          <% if @book.user_id == current_user.id %>
  	      <td><%= link_to "Edit", edit_book_path(@book.id),class: "edit_book_#{@book.id}" %></td>
	    	  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか?'},class: "destroy_book_#{@book.id}" %></td>
          <% end %>
  		  </tr>
  	  </tbody>
    </table>
  </div>
</div>