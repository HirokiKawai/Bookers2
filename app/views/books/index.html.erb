<div class="nb-font">
    <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <% @book.errors.full_messages.each do |message| %>
        <div>
            <li><%= message %></li>
        </div>
        <% end %>
    <% end %>
</div>



<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <%= render 'books/list', user: current_user, book: @book %>
	</div>

  <div class="col-xs-9">
    <table class="table table-striped">
	  <thead>
	  	<h2>Books</h2>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	  </thead>

	  <tbody>
		  <% @books.each do |book| %>
		  <tr>
			<td class="image">
			<!-- テキスト、ブロック要素にリンクをもたせる方法 -->
			<%= link_to user_path(book.user), class: "users" do %>
	            <%= attachment_image_tag book.user, :image, fallback:"no_image.jpg", class: "img" %>
	        <% end %>
	        </td>
			<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
			<td><%= book.body %></td>
		  </tr>
		  <% end %>
	  </tbody>
    </table>
  </div>