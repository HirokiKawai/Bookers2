
<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render "books/list", user: @user, book: @book %>
    </div>



    <div class="col-xs-9">
      <h2>Books</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Image</th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td class="image">
					<!-- 変更点？ -->
		            <%= attachment_image_tag book.user, :image, fallback:"no_image.jpg", class: "img" %></td>
		            <!-- 変更点？ -->
					<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
				</tr>
		        <% end %>
			</tbody>
		</table>
	</div>
</div>