<h2>User Info</h2>
  <!-- プロフィール画像設定用にフォームを編集のために追加 -->

    <%= form_for(@user) do |f| %>


    <!-- プロフィールの変更について -->
    <div class="ui-font">
    <% if @user.errors.any? %>
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
        <% @user.errors.full_messages.each do |message| %>
        <div>
            <li><%= message %></li>
        </div>
        <% end %>
    <% end %>
  </div>



      <h4>name</h4>
      <%= f.text_field :name, class: "name" %>

      <h4>image</h4>
      <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form user_image" %>

      <h4>introduction</h4>
      <!--  -->
      <%= f.text_field :introduction, class: "introduction" %>

      <%= f.submit 'Update User', class: "btn btn-primary" %>

    <% end %>



